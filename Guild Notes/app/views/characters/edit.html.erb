<h1>Editing Character</h1>

<% form_for([@person, @character]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :char_class %><br />
    <%= f.text_field :char_class %>
  </p>
  <p>
    <%= f.label :notes %><br />
    <%= f.text_area :notes %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', person_character_path(@person, @character) %> |
<%= link_to 'Back', person_characters_path(@person) %>