<h1>Characters for <%= @person.name %></h1>

<table>
  <tr>
    <th>Name</th>
    <th>Class</th>
    <th>Notes</th>
  </tr>

<% for character in @characters %>
  <tr>
    <td><%=h character.name %></td>
    <td><%=h character.char_class %></td>
    <td><%=h character.notes %></td>
    <td><%= link_to 'Show', person_character_path(@person, character) %></td>
    <td>
        <%= link_to 'Edit', edit_person_character_path(@person, character) %>
    </td>
    <td>
        <%= link_to 'Destroy', person_character_path(@person, character),
            :confirm => 'Are you sure?', :method => :delete %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New character', new_person_character_path(@person) %>
<%= link_to 'Back to Person', @person %>